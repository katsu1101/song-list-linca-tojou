generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id        Int      @id @default(autoincrement())
  date      String // 直前のPタグのテキスト（例: 2025年2月23日）
  title     String // 曲名（Pタグのテキスト）
  url       String // YouTubeのURL
  videoId   String // YouTube動画ID
  timestamp String? // 開始時間（null許可）
  createdAt DateTime @default(now())

  @@unique([videoId, timestamp]) // ✅ 複合ユニークキーを追加
}
